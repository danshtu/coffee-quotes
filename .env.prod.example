# Production Environment Variables Template
# Copy this to .env.prod and fill in your production values

# Django Settings
DJANGO_SECRET_KEY=GENERATE_A_STRONG_SECRET_KEY_50_CHARS_MIN
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-server-ip

# PostgreSQL Database Settings
POSTGRES_DB=coffee_quotes
POSTGRES_USER=postgres
POSTGRES_PASSWORD=STRONG_PRODUCTION_PASSWORD_HERE
POSTGRES_HOST=db
POSTGRES_PORT=5432

# CORS Settings (comma-separated list of allowed origins)
# Use your actual frontend production URL
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
